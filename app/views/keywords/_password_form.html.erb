<%= form_tag(root_path, method: :get) do %>
  <%= text_field_tag :separator, params[:separator], placeholder: "Enter what you would like to separate words with" %>
  <%= select_tag 'length_of_password', options_for_select([ 
    ["5"],
    ["6"],
    ["7"],
    ["8"],
    ["9"],
    ["10"],
    ["11"],
    ["12"],
    ["13"]
  ]) %>
  <%= submit_tag "Submit", class: 'button', id: 'submit' %>
<% end %>